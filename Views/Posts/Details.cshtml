@using Microsoft.AspNetCore.Identity
@model MicroSocialPlatform.Models.Post
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


@{
    ViewData["Title"] = "Post details";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="insta-feed-container mt-4">
    <article class="insta-post-card shadow-soft mb-4">
        <!-- HEADER: avatar + username + time -->
        <div class="insta-post-header d-flex align-items-center justify-content-between px-3 pt-3">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.User.ProfileImage))
                {
                    <img src="@Model.User.ProfileImage"
                         alt="@Model.User.FullName"
                         class="avatar-circle me-2" />
                }
                else
                {
                    var initials = (Model.User.FirstName?.FirstOrDefault().ToString() ?? "") +
                                   (Model.User.LastName?.FirstOrDefault().ToString() ?? "");
                    <div class="avatar-placeholder me-2 d-flex align-items-center justify-content-center">
                        <span>@initials</span>
                    </div>
                }

                <div>
                    <div class="insta-username">@Model.User.UserName</div>
                    <small class="text-muted d-block">
                        @Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy • HH:mm")
                    </small>
                </div>
            </div>

            @* Edit / Delete pentru autor sau doar Admin *@
            @if (Model.UserId == currentUserId || User.IsInRole("Admin"))
            {
                <div class="dropdown">
                    <button class="btn btn-sm btn-light border-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.Id">
                                <i class="bi bi-pencil-square me-2"></i>Edit
                            </a>
                        </li>
                        <li>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <button class="dropdown-item text-danger" type="submit">
                                    <i class="bi bi-trash me-2"></i>Delete
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
        </div>

        <!-- MEDIA -->
        @if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
        {
            <div class="insta-post-media mt-2">
                @if (Model.MediaUrl.Contains(".mp4") || Model.MediaUrl.Contains(".mov"))
                {
                    <video controls>
                        <source src="@Model.MediaUrl" type="video/mp4" />
                        Your browser does not support the video tag.
                    </video>
                }
                else
                {
                    <img src="@Model.MediaUrl" alt="Post media" />
                }
            </div>
        }

        <!-- CAPTION -->
        <div class="insta-post-body px-3 pt-3 pb-3">
            @if (!string.IsNullOrEmpty(Model.Title))
            {
                <h3 class="fw-semibold mb-2">@Model.Title</h3>
            }

            @if (!string.IsNullOrEmpty(Model.Content))
            {
                <p class="insta-post-caption mb-0">@Model.Content</p>
            }
        </div>
    </article>
    <div class="card shadow-soft border-0 mb-4">
        <div class="card-body">
            <h4 class="mb-3">Comments (@Model.Comments.Count)</h4>

            @if (SignInManager.IsSignedIn(User))
            {
                <form asp-controller="Comments" asp-action="New" method="post" class="mb-4">
                    <input type="hidden" name="PostId" value="@Model.Id" />
                    <div class="mb-2">
                        <label for="Content" class="form-label">Add a comment</label>
                        <textarea name="Content" class="form-control" rows="2" required
                                  placeholder="Write something nice..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-chat-dots me-1"></i> Post comment
                    </button>
                </form>
            }
            else
            {
                <p class="alert alert-info mb-4">
                    Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to post comments.
                </p>
            }

            @if (Model.Comments.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.Date))
                    {
                        <div class="list-group-item px-0 d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">@comment.User.UserName</div>
                                <div>@comment.Content</div>
                                <small class="text-muted">@comment.Date.ToString("g")</small>
                            </div>

                            @if (comment.UserId == currentUserId || User.IsInRole("Admin"))
                            {
                                <div class="ms-3 text-nowrap">
                                    <a asp-controller="Comments"
                                       asp-action="Edit"
                                       asp-route-id="@comment.Id"
                                       class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-controller="Comments"
                                          asp-action="Delete"
                                          asp-route-id="@comment.Id"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No comments yet. Be the first one!</p>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-link px-0">
        <i class="bi bi-arrow-left"></i> Back to feed
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
