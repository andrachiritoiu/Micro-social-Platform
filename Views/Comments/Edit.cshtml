@model MicroSocialPlatform.Models.Comment

@{
    ViewData["Title"] = "Edit Comment";
    string headerBackground = "#34495e";
    string accentColor = "#7952b3";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header p-4 text-center border-0"
                     style="background-color: @headerBackground; color: white;">
                    <h3 class="fw-bold mb-0">Edit Comment</h3>
                    <p class="mb-0 text-white-50">Update your comment.</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PostId" />

                        <div class="form-floating mb-4">
                            <textarea asp-for="Content" class="form-control" placeholder="Comment" required
                                      style="height: 120px"></textarea>
                            <label asp-for="Content">Comment Content</label>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg rounded-pill fw-bold text-white shadow-sm hover-scale"
                                    style="background-color: @accentColor; border: none;">
                                Save Changes
                            </button>
                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.PostId" 
                               class="btn btn-light btn-lg rounded-pill text-muted hover-bg">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

    .hover-scale:hover {
        transform: scale(1.02);
    }

    .hover-bg:hover {
        background-color: #f1f3f5;
    }
</style>
