@model IEnumerable<MicroSocialPlatform.Models.AdminConversationViewModel>

@{
    ViewData["Title"] = "All Conversations (Admin)";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"> <i class="bi bi-shield-lock-fill"></i> System Conversations</h2>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Users</th>
                            <th>Last Message</th>
                            <th>Date</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@item.User1?.ProfileImage" class="rounded-circle border" width="40" height="40" alt="@item.User1?.UserName">
                                            <span class="ms-2 fw-bold text-dark">@item.User1?.FirstName @item.User1?.LastName</span>
                                        </div>
                                        <i class="bi bi-arrow-left-right text-muted"></i>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.User2?.ProfileImage" class="rounded-circle border" width="40" height="40" alt="@item.User2?.UserName">
                                            <span class="ms-2 fw-bold text-dark">@item.User2?.FirstName @item.User2?.LastName</span>
                                        </div>
                                    </div>
                                    <small class="text-muted d-block mt-1">@item.User1?.Email <-> @item.User2?.Email</small>
                                </td>
                                <td class="text-truncate" style="max-width: 250px;">
                                    <span class="text-secondary">@item.LastMessage?.Content</span>
                                </td>
                                <td>
                                    <small class="text-muted">@item.LastMessage?.CreatedAt.ToString("g")</small>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="AdminChat" 
                                       asp-route-user1Id="@item.User1?.Id" 
                                       asp-route-user2Id="@item.User2?.Id"
                                       class="btn btn-primary btn-sm rounded-pill px-3">
                                        <i class="bi bi-eye"></i> View Chat
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-chat-square-dots text-muted fs-1"></i>
                    <p class="text-muted mt-2">No conversations found in the system.</p>
                </div>
            }
        </div>
    </div>
</div>
