@model IEnumerable<MicroSocialPlatform.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

@using Microsoft.AspNetCore.Identity
@using MicroSocialPlatform.Models
@inject SignInManager<ApplicationUser> SignInManager

@{
    var userMemberships = ViewData["UserMemberships"] as List<int> ?? new List<int>();
    var currentUserId = ViewData["CurrentUserId"] as string;
}

<div class="feed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: var(--text-primary); font-weight: 600;">Groups</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Group
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var group in Model)
            {
                var isMember = userMemberships.Contains(group.Id);
                var isModerator = group.ModeratorId == currentUserId;
                var memberCount = group.GroupMemberships?.Count(gm => gm.IsAccepted) ?? 0;
                
                <div class="col-md-6 col-lg-4">
                    <div class="custom-card h-100" style="transition: all 0.3s ease;">
                        <div class="custom-card-header" style="background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-purple) 100%); color: white; padding: 20px;">
                            <h4 style="margin: 0; font-weight: 600; color: white;">@group.Name</h4>
                        </div>
                        <div style="padding: 20px;">
                            <p class="text-muted mb-3" style="min-height: 60px;">@group.Description</p>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-people"></i> @memberCount member@(memberCount != 1 ? "s" : "")
                                </small>
                                <small class="text-muted">
                                    <i class="bi bi-person-badge"></i> @group.Moderator?.UserName
                                </small>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-outline-primary btn-sm flex-grow-1">
                                    <i class="bi bi-chat-dots"></i> @(isMember ? "Open" : "View")
                                </a>
                                @if (!isMember && !isModerator)
                                {
                                    <form asp-action="Join" asp-route-id="@group.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="bi bi-person-plus"></i> Join
                                        </button>
                                    </form>
                                }
                                @if (isMember && !isModerator)
                                {
                                    <form asp-action="Leave" asp-route-id="@group.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to leave this group?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-box-arrow-right"></i> Leave
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="custom-card text-center" style="padding: 60px 20px;">
            <div style="font-size: 3rem; margin-bottom: 20px; color: var(--primary-blue);">
                <i class="bi bi-people"></i>
            </div>
            <h3 style="color: var(--text-primary); margin-bottom: 10px;">No groups yet</h3>
            <p class="text-muted mb-4">Be the first to create a group!</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Group
            </a>
        </div>
    }
</div>

