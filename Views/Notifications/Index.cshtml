@model IEnumerable<MicroSocialPlatform.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="feed-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 style="color: var(--text-primary); font-weight: 600;">Notifications</h2>
        @if (Model.Any(n => !n.IsRead))
        {
            <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-check-all"></i> Mark all as read
                </button>
            </form>
        }
    </div>

    @if (Model.Any())
    {
        <div class="custom-card">
            <div class="list-group list-group-flush">
                @foreach (var notification in Model)
                {
                    var relatedUser = notification.RelatedUser;
                    var relatedUserInitials = relatedUser?.UserName?.Substring(0, 1).ToUpper() ?? "U";
                    var bgClass = notification.IsRead ? "" : "bg-light";
                    var borderClass = notification.IsRead ? "" : "border-left: 3px solid var(--primary-blue);";
                    var icon = GetNotificationIcon(notification.Type);
                    
                    <div class="list-group-item d-flex align-items-start gap-3 p-3 @bgClass" style="@borderClass border-bottom: 1px solid var(--border-color);">
                        <div style="font-size: 1.5rem; color: var(--primary-blue); flex-shrink: 0;">
                            @Html.Raw(icon)
                        </div>
                        <div class="flex-grow-1">
                            <div style="font-weight: @(notification.IsRead ? "400" : "600"); color: var(--text-primary); margin-bottom: 4px;">
                                @notification.Title
                            </div>
                            @if (!string.IsNullOrEmpty(notification.Content))
                            {
                                <div style="font-size: 0.9rem; color: var(--text-secondary); margin-bottom: 4px;">
                                    @notification.Content
                                </div>
                            }
                            <small class="text-muted">@GetTimeAgo(notification.CreatedAt)</small>
                            
                            @if (notification.Type == "FollowRequest" && notification.RelatedUserId != null)
                            {
                                <div class="mt-2 d-flex gap-2">
                                    <form asp-controller="Users" asp-action="AcceptFollow" asp-route-followerId="@notification.RelatedUserId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="bi bi-check"></i> Accept
                                        </button>
                                    </form>
                                    <form asp-controller="Users" asp-action="DeclineFollow" asp-route-followerId="@notification.RelatedUserId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x"></i> Decline
                                        </button>
                                    </form>
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(notification.Link))
                            {
                                <div class="mt-2">
                                    <a href="@notification.Link" class="btn btn-outline-primary btn-sm">
                                        View <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            }
                        </div>
                        @if (!notification.IsRead)
                        {
                            <span class="badge rounded-pill" style="background: var(--primary-blue);">New</span>
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="custom-card text-center" style="padding: 60px 20px;">
            <div style="font-size: 3rem; margin-bottom: 20px; color: var(--primary-blue);">
                <i class="bi bi-bell-slash"></i>
            </div>
            <h3 style="color: var(--text-primary); margin-bottom: 10px;">No notifications</h3>
            <p class="text-muted">You're all caught up!</p>
        </div>
    }
</div>

@functions {
    private string GetNotificationIcon(string type)
    {
        return type switch
        {
            "FollowRequest" => "<i class=\"bi bi-person-plus\"></i>",
            "FollowAccepted" => "<i class=\"bi bi-check-circle\"></i>",
            "NewMessage" => "<i class=\"bi bi-envelope\"></i>",
            "NewComment" => "<i class=\"bi bi-chat\"></i>",
            "NewReaction" => "<i class=\"bi bi-heart\"></i>",
            "GroupInvite" => "<i class=\"bi bi-people\"></i>",
            _ => "<i class=\"bi bi-bell\"></i>"
        };
    }

    private string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;

        if (timeSpan.TotalSeconds < 60)
            return "just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minute{((int)timeSpan.TotalMinutes != 1 ? "s" : "")} ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hour{((int)timeSpan.TotalHours != 1 ? "s" : "")} ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} day{((int)timeSpan.TotalDays != 1 ? "s" : "")} ago";

        return dateTime.ToString("MMM dd, yyyy");
    }
}

